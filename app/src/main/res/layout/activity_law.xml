<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LawActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:background="@color/color8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/i1"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:text="Laws Related to Woman"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/law_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/LawHeading"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/link1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link1"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/link2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link2"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/link3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link3"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/link4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link4"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/link5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link5"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/link6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link6"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/link7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link7"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/link8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link8"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/link9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link9"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/link10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link10"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/link11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link11"
                    android:layout_margin="10dp"
                    android:textStyle="italic"/>
            </LinearLayout>


        </ScrollView>
    </RelativeLayout>



</RelativeLayout>